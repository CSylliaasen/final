<h1>Trails!</h1>
<div>
        <a href="/trails/new" type="button" class="btn btn-primary mt-3">Can't find your Trail? Create one here!</a>
</div>
<div>
    <table class="table table-hover mt-4">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Trail</th>
                <th scope="col">Location</th>
                <th scope="col">Distance</th>
                <th scope="col">Difficulty</th>
                <th scope="col">Comments</th>
                <th scope="col">Details</th>
            </tr>
        </thead>
        <tbody>
            <% row = 1 %>
            <% for trail in @trails_table do %>
            <tr>
                <th scope="row"><%= row %></th>
                <td><%= trail[:trail_name] %></td>
                <td><%= trail[:location] %></td>
                <td><%= trail[:distance] %></td>
                <td><%= trail[:difficulty] %></td>
                <td><%= trail[:comments] %></td>
                <td><a href="/trails/<%= trail[:trail_id] %>/detail">Details</a></td>
            </tr>
            <% row = row + 1 %>
            <% end %>
        </tbody>
    </table>
</div>